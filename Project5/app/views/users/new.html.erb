<div>
    <div>
        <h1>Sign Up</h1>
    </div>
    <%= form_for @user do |f|%>
    <div>
        
        <div><%= f.text_field :fname, placeholder: "First name"%><br></div>
    
        <div><%= f.text_field :lname, placeholder: "Last name"%><br></div>
    
        <!--%= f.text_field :affiliation, placeholder: "Faculty/Student"%><br-->
        <div><%= f.select :affiliation, ["Faculty", "Student"]%><br></div>
        <div><%= f.text_field :username, placeholder: "name.#"%><br></div>
    
        <div><%= f.password_field :password, placeholder: "Password"%><br></div>

        <div><%= f.submit %></div>
    </div>
    <%end%>

</div>
