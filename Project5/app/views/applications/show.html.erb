<p id="notice"><%= notice %></p>
<% curr_app = Application .find(params[:id]) %>
<p>
  <strong>First Name:</strong>
  <%= User.find(curr_app.user_id.to_i).fname %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= User.find(curr_app.user_id.to_i).lname %>
</p>


<p>
  <strong>Course Numbers Name:</strong>
  <%= curr_app.course_number %>
</p>

<p>
  <strong>Class Schedule:</strong>
  <%= curr_app.schedule %>
</p>

<p>
  <strong>Email:</strong>
  <%= User.find(curr_app.user_id.to_i).email %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= User.find(curr_app.user_id.to_i).phone_number %>
</p>

<%if curr_app.user_id.to_i == current_user.id.to_i || current_user.affiliation == 'Admin'%>
  <%= link_to 'Edit', edit_application_path(curr_app) %>
  <%end %>
<%= link_to 'Back', applications_path %>
