<p id="notice"><%= notice %></p>

<h1>Evaluations</h1>

<table>
  <thead>
  <tr>
    <th>Course Number</th>
    <th>Instructor</th>
    <th>Student</th>
    <th>Rating</th>
  </tr>
  </thead>

  <tbody>
  <% @evaluations.each do |eval| %>
    <tr>
      <td><%= eval.evaluation %></td>
      <td><%= eval.ins_username%></td>
      <td><%= eval.ta_username%></td>
      <td><%= eval.rating %></td>
      <% if eval.ins_username == current_user.username or current_user.affiliation == "Admin"%>
        <td><%= link_to 'Edit',  edit_path(eval) %></td>
        <td><%= link_to 'Destroy', eval, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>